{% extends 'base.html.twig' %}

{% block title %}Liste des objets{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des objets</h1>
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_item_create') }}" class="btn btn-primary">Ajouter un objet</a>
    </div>
    <table class="table table-striped table-bordered mt-4">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <th scope="row">{{ item.id }}</th>
                <td>{{ item.name }}</td>
                <td>{{ item.description|length > 100 ? item.description|slice(0, 100) ~ '...' : item.description }}</td>
                <td>
                    <a href="{{ path('app_item_show', {id: item.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('app_item_edit', {id: item.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('app_item_delete', {id: item.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
